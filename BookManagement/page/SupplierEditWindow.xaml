<Window x:Class="BookManagement.window.SupplierEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="供货商编辑" Height="400" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel>
            <TextBlock Text="供货商名称:" Margin="0,5"/>
            <TextBox Name="txtSupplierName" Margin="0,5"/>

            <TextBlock Text="联系电话:" Margin="0,5"/>
            <TextBox Name="txtContactNumber" Margin="0,5"/>

            <TextBlock Text="电子邮件:" Margin="0,5"/>
            <TextBox Name="txtEmail" Margin="0,5"/>

            <TextBlock Text="地址:" Margin="0,5"/>
            <TextBox Name="txtAddress" Margin="0,5"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10">
            <Button Content="保存" Width="80" Margin="10,0" Click="Save_Click"/>
            <Button Content="取消" Width="80" Margin="10,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
