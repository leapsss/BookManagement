<Window x:Class="BookManagement.page.UserUpdateWindow"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="用户名:" />
            <TextBox Name="UsernameTextBox" Margin="0,5" />

            <TextBlock Text="密码:" />
            <PasswordBox Name="PasswordBox" Margin="0,5" />

            <TextBlock Text="角色:" />
            <TextBox Name="RoleTextBox" Margin="0,5" />

            <Button Content="提交" HorizontalAlignment="Right" Click="SaveButton_Click" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

