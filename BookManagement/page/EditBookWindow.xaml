<Window x:Class="BookManagement.page.EditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookManagement.page"
        mc:Ignorable="d"
        Title="修改图书信息" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Name="ISBNTextBox" Width="200" Margin="10" />
            <TextBox Name="BookNameTextBox" Width="200" Margin="10" />
            <TextBox Name="AuthorTextBox" Width="200" Margin="10" />
            <TextBox Name="PressTextBox" Width="200" Margin="10" />
            <TextBox Name="PressDateTextBox" Width="200" Margin="10" />
            <TextBox Name="ClcNameTextBox" Width="200" Margin="10" />
            <TextBox Name="PriceTextBox" Width="200" Margin="10" />
            <TextBox Name="BookDescTextBox" Width="200" Margin="10" />
            <Button Name="SubmitButton" Content="提交" Width="100" Height="30" Margin="10" Click="SubmitButton_Click" />
        </StackPanel>
    </Grid>
</Window>
